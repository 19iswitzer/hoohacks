<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/weeklyReportTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="weekly_report" />

        <TextView
            android:id="@+id/amountSpentLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="average_amount_spent_per_day_0" />

        <TextView
            android:id="@+id/mostFrequentLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="most_frequently_visited_place_starbucks" />

        <TextView
            android:id="@+id/onOrOffBudgetLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="stayed_under_budget_by_0_good_job_or_went_over_budget_by_x_was_there_anything_you_could_have_cut_out_to_help_you_meet_your_goal" />
    </LinearLayout>

</RelativeLayout>