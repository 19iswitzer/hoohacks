<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="406dp"
        android:layout_height="159dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/weeklyReportButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Weekly Report" />

        <Button
            android:id="@+id/manageCostButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add / Manage Costs" />

        <Button
            android:id="@+id/pastExpensesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Past Expenses" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="388dp"
        android:layout_marginTop="200dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/currentBalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amount left in weekly budget" />

        <TextView
            android:id="@+id/curBalNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0" />

    </LinearLayout>


</RelativeLayout>